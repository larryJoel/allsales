<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/clientes/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value ="{{links.fullname}}" class="form-control" name="fullname" placeholder="Nombre y apellido"
                                autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.documento}}" class="form-control" name="documento" placeholder="Cédula de identidad" required>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{links.username}}" class="form-control" name="username" placeholder="Nombre de usuario" required>
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{links.email}}" class="form-control" name="email" placeholder="Email" >
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" value="{{links.phone}}" name="phone" placeholder="teléfono" >
                        </div>
                        <div class="form-group">
                            <textarea name="address"  rows="2" class="form-control" name="address" placeholder="Indique la Dirección">{{links.address}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Editar/Edit
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-header">

                </div>
            </div>
        </div>
    </div>
</div>