                                {{/each}}
                            </select>
                        </div> --}}
                        <div class="form-group">
                            <input type="text" name="cetegoria" list="datalist1" class="form-control" placeholder="Seleccione una categoria">
                            <datalist id="datalist1">
                                {{#each lista}}
                                <option value="{{name}}">
                                {{/each}}
                            </datalist>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="unidad" placeholder="Unidad Venta">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="unidad_compra" placeholder="Unidad Compra">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="presentacion" placeholder="Presentacion">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="inventario_min"
                                placeholder="inventario Mínimo">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="inventario_max"
                                placeholder="Inventario Máximo">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="precio_in" placeholder="Precio de compra">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="precio_out" placeholder="Precio de venta">
                        </div>
                        <div class="form-group">
                            <textarea rows="2" class="form-control" name="descripcion"
                                placeholder="Descripcion"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
