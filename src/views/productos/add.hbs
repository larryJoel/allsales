    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="cod_product" placeholder="Código del producto"
                                autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Nombre del producto"
                                required>
                        </div>
                        {{!-- <div class="input-group mb-3">
