<div class="container">
    <div class="row">
        <div class="col-md-5 mt-4 card">

            <form class="card-body" action="/ventas/fact" method="post">
                
                <h3 class="card-title">Venta/Fact: {{factura}}</h3>
                <h5>Total: {{row}} USD$</h5>
                <td> <a href="/ventas/add" class="btn btn-danger btn-block">Agregar productos</a>
                    <br>
                    <div class="form-group">
                        <input name="id_producto" type="text" class="form-control" placeholder="Cod. del producto"
                            value="{{buscador.id}}">
                    </div>
                    <div class="form-group">
                        <input name="descripcion" type="text" class="form-control" placeholder="descripcion"required
                            value="{{buscador.name}}">
                    </div>
                    <div class="form-group">
                        <input name="precio" type="text" class="form-control" placeholder="precio"required
                            value="{{buscador.precio_out}}">
                    </div>
                    <div class="form-group">
                        <input name="cantidad" type="text" class="form-control" placeholder="cantidad" required
                            autofocus>
                    </div>
                    <input type="submit" value=" Cargar Producto" class="btn btn-primary">
            </form>
            <hr>
            <a href="/ventas/cabecera" class="btn btn-warning btn-block">Agregar Cliente</a>
            <hr>
        </div>
        <div class="col-md-6 mt-4 text-center">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>ID</th>
                    <th>producto</th>
                    <th>cant</th>
                    <th>precio</th>
                    <th>Total</th>
                    <th scope="colspan=2" class="text-center">Operaciones</th>
                </tr>
                {{#each detalle}}
                <tr>
                    <td>{{ id_producto }}</td>
                    <td>{{ descripcion }}</td>
                    <td>{{ cantidad }}</td>
                    <td>{{ precio }}</td>
                    <td>{{ total }}</td>
                    <td> <a href="/ventas/delete/{{id_producto}}" class="btn btn-danger btn-block">Delet</a></td>
                    <td> <a href="/ventas/edit/{{id_producto}}" class="btn btn-success btn-block">Edit</a></td>
                </tr>
                {{/each}}

            </table>
        </div>
    </div>
</div>